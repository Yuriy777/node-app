<h1>Courses</h1>

{{#if courses.length}}
    {{#each courses}}
        <div class="row">
            <div class="col s12 m7">
                <div class="card">
                    <div class="card-image">
                        <img src="{{this.image}}">
                    </div>
                    <div class="card-content">
                        <h4 class="card-title">{{this.title}}</h4>
                        <p>{{this.price}}</p>
                    </div>
                    <div class="card-action">
                        <a href="/courses/{{this.id}}">This is a link</a>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
    {{else}}
    <p>courses not found</p>

{{/if}}